<!DOCTYPE html>
<html>
<head>
    <!-- Include Google Fonts for custom typography -->
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin="" />
    <link
        rel="stylesheet"
        as="style"
        onload="this.rel='stylesheet'"
        href="https://fonts.googleapis.com/css2?display=swap&family=Noto+Sans:wght@400;500;700;900&family=Plus+Jakarta+Sans:wght@400;500;700;800"
    />
    
    <!-- Page Title -->
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <!-- Favicon (you can add your own base64 encoded image) -->
    <link rel="icon" type="image/x-icon" href="data:image/x-icon;base64," />

    <!-- Include Tailwind CSS for styling -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
</head>
<body class="relative flex size-full min-h-screen flex-col bg-[#FFFFFF] overflow-x-hidden" style='font-family: "Plus Jakarta Sans", "Noto Sans", sans-serif;'>
    <div class="layout-container flex h-full grow flex-col">
        <!-- Header Section with Navigation -->
        <header class="flex items-center justify-between whitespace-nowrap border-b border-solid border-b-[#F4EFE6] px-10 py-3">
            <div class="flex items-center gap-4 text-[#1C160C]">
                <div class="size-4">
                    <!-- Logo SVG -->
                    <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M36.7273 44C33.9891 44 31.6043 39.8386 30.3636 33.69C29.123 39.8386 26.7382 44 24 44C21.2618 44 18.877 39.8386 17.6364 33.69C16.3957 39.8386 14.0109 44 11.2727 44C7.25611 44 4 35.0457 4 24C4 12.9543 7.25611 4 11.2727 4C14.0109 4 16.3957 8.16144 17.6364 14.31C18.877 8.16144 21.2618 4 24 4C26.7382 4 29.123 8.16144 30.3636 14.31C31.6043 8.16144 33.9891 4 36.7273 4C40.7439 4 44 12.9543 44 24C44 35.0457 40.7439 44 36.7273 44Z" fill="currentColor"></path>
                    </svg>
                </div>
                <h2 class="text-[#1C160C] text-lg font-bold leading-tight tracking-[-0.015em]">Contract Monthly Claim System</h2>
            </div>
            <!-- Navigation Links -->
            <div class="flex flex-1 justify-end gap-8">
                <div class="flex items-center gap-9">
                    <a class="text-[#1C160C] text-sm font-medium leading-normal" href="@Url.Action("Index", "Home")">Home</a>
                    <a class="text-[#1C160C] text-sm font-medium leading-normal" href="@Url.Action("SubmitClaim", "Lecturer")">Submit Claim</a>
                    <a class="text-[#1C160C] text-sm font-medium leading-normal" href="@Url.Action("UploadDocuments", "Lecturer")">Upload Documents</a>
                    <a class="text-[#1C160C] text-sm font-medium leading-normal" href="@Url.Action("CheckStatus", "Lecturer")">Check Status</a>
                    <a class="text-[#1C160C] text-sm font-medium leading-normal" href="@Url.Action("ApproveClaims", "Approval")">Approve Claims</a>
                </div>
                <!-- User and Settings Icons -->
                <div class="flex gap-2">
                    <button class="flex items-center justify-center h-10 bg-[#F4EFE6] text-[#1C160C] rounded-full px-2.5 text-sm font-bold">Settings</button>
                    <button class="flex items-center justify-center h-10 bg-[#F4EFE6] text-[#1C160C] rounded-full px-2.5 text-sm font-bold">Notifications</button>
                    <button class="flex items-center justify-center h-10 bg-[#F4EFE6] text-[#1C160C] rounded-full px-2.5 text-sm font-bold">Profile</button>
                </div>
                <!-- User Avatar -->
                <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10" style='background-image: url("https://cdn.usegalileo.ai/stability/38d45a23-ee8d-4822-bc04-965eb6f284eb.png");'></div>
            </div>
        </header>

        <!-- Main Content Area -->
        <main class="px-40 flex flex-1 justify-center py-5">
            <div class="layout-content-container flex flex-col max-w-[960px] flex-1">
                @RenderBody()
            </div>
        </main>

        <!-- Footer Section -->
        <footer class="flex justify-center">
            <div class="flex max-w-[960px] flex-1 flex-col">
                <p class="text-[#A18249] text-sm font-normal leading-normal pb-3 pt-1 px-4 text-center">© 2024 Contract Monthly Claim System</p>
            </div>
        </footer>
    </div>
</body>
</html>
